<?xml version="1.0" encoding="utf-8"?>

<WMT_MS_Capabilities version="1.3.0" schemaLocation="test">
    <Service>
        <Name>WMS</Name>
        <Title>${geodatastorage_name}_${layer_name}</Title>
        <OnlineResource xlink:href="${absolute_uri}" xmlns:xlink="http://www.w3.org/1999/xlink"/>
    </Service>
    <Capability>
        <Request>
            <GetCapabilities>
                <Format>text/xml</Format>
                <DCPType>
                    <HTTP>
                        <Get>
                            <OnlineResource xlink:href="${absolute_uri}" xmlns:xlink="http://www.w3.org/1999/xlink"/>
                        </Get>
                    </HTTP>
                </DCPType>
            </GetCapabilities>
            <GetMap>
                <Format>image/png</Format>
                <DCPType>
                    <HTTP>
                        <Get>
                            <OnlineResource xlink:href="${absolute_uri}" xmlns:xlink="http://www.w3.org/1999/xlink"/>
                        </Get>
                    </HTTP>
                </DCPType>
            </GetMap>
        </Request>
        <Exception>
            <Format>text/html</Format>
        </Exception>
            <Layer cascaded="0" opaque="0" queryable="0">
                <Name>${layer_name}</Name>
                <Title>${layer_name}</Title>
                <Abstract>WmsLayerAbstract</Abstract>
                <CRS>EPSG:3857</CRS>
                <SRS>EPSG:3857</SRS>
                <EX_GeographicBoundingBox>
                    <westBoundLongitude>${ ll_bbx_minx }</westBoundLongitude>
                    <eastBoundLongitude>${ ll_bbx_maxx }</eastBoundLongitude>
                    <southBoundLatitude>${ ll_bbx_miny }</southBoundLatitude>
                    <northBoundLatitude>${ ll_bbx_maxy }</northBoundLatitude>
                </EX_GeographicBoundingBox>
                <BoundingBox CRS="EPSG:4326" SRS="EPSG:4326" maxx="${ ll_bbx_maxx }" maxy="${ ll_bbx_maxy }" minx="${ll_bbx_minx }"
                             miny="${ ll_bbx_miny }"/>
            </Layer>
    </Capability>
</WMT_MS_Capabilities>